<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="fioritest.controller.main"
    displayBlock="true"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <FlexBox
                width="100%"
                id="box0"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inArea"
                        placeholder="Area"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inBeds"
                        placeholder="Bedrooms"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy2"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inBaths"
                        placeholder="Bathrooms"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy3"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inStore"
                        placeholder="Stories"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy4"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inGuest"
                        placeholder="Guest Room"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy5"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inBase"
                        placeholder="Basement"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy6"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inPark"
                        placeholder="Parking"
                        type="Number"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy7"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inAreaBed"
                        placeholder="Area per Bedroom"
                        required="true"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy10"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Input
                        xmlns="sap.m"
                        id="inBBRatio"
                        placeholder="BB Ratio"
                        required="true"
                    />
                </items>
            </FlexBox>

            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy8"
                alignItems="Center"
                justifyContent="Center"
                alignContent="Center"
            >
                <items>
                    <Button
                        xmlns="sap.m"
                        text="Predict House Price"
                        id="bttn1"
                        press="onClick"
                    />
                </items>
            </FlexBox>
            <FlexBox
                xmlns:mvc="sap.ui.core.mvc"
                xmlns="sap.m"
                width="100%"
                id="box0_copy9"
                alignItems="Center"
                justifyContent="Center"
            >
                <items>
                    <Label
                        text="Predicted Price :"
                        width="100%"
                        id="lblMsg"
                    />
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
